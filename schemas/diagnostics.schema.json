{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "DiagnosticsReport",
  "type": "object",
  "properties": {
    "errors": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Diagnostic"
      }
    },
    "schema_version": {
      "type": "string",
      "default": "1.0"
    }
  },
  "required": [
    "errors"
  ],
  "$defs": {
    "Diagnostic": {
      "type": "object",
      "properties": {
        "code": {
          "type": [
            "string",
            "null"
          ],
          "default": null
        },
        "file": {
          "type": "string"
        },
        "hint": {
          "type": [
            "string",
            "null"
          ],
          "default": null
        },
        "line": {
          "type": "integer",
          "format": "uint",
          "minimum": 0
        },
        "message": {
          "type": "string"
        },
        "severity": {
          "type": "string"
        }
      },
      "required": [
        "file",
        "line",
        "message",
        "severity"
      ]
    }
  }
}